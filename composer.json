{
    "name": "star/state-machine",
    "description": "PHP implementation of a configurable State Machine, Worflow, transitions for your domain models",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Yannick Voyer",
            "email": "star.yvoyer@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Star\\Component\\State\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Star\\Component\\State\\": "tests",
            "Star\\Component\\State\\Example\\": "examples"
        }
    },
    "require": {
        "php": ">=5.5",
        "webmozart/assert": "^1.0",
        "symfony/event-dispatcher": "^2.0"
