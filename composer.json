    "require-dev": {
        "claviska/simpleimage": "~3.0",
        "doctrine/orm": "^2.5",
        "ext-gd": "*",
        "ext-sqlite3": "*",
        "ext-simplexml": "*",
        "phpunit/phpunit": "~5.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
